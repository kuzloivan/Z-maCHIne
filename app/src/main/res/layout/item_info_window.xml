<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/info_window_bg"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="200dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_window_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="интерактивный аттракцион «Транс-Форс»"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/info_window_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="200dp"
            android:text="ТЮЗ им. Брянцева — старейший театр, появившийся еще во времена Петрограда, в 1922 году. Его основателем и бессменным руководителем на протяжении 40 лет был Александр Александрович Брянцев, заложивший в концепцию принципы «трех поколений», верность которым театр сохраняет и в наши дни. Это «особое назначение» — направленность репертуара на малышей, подростков и молодежь"
            android:textSize="10sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_window_favoutist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/favourits_vector"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:maxWidth="200dp"
                android:text="40"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/info_window_coments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/comment_vector"
                android:drawablePadding="6dp"
                android:maxWidth="200dp"
                android:text="39"
                android:textSize="10sp" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>